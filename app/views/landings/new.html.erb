<div class="divider" id="section2"></div>
   
<div class="row">
    <div class="col-sm-10 col-sm-offset-1">
      <h1 class="howdoesit">Sign in</h1>
      
      <div>
        <%= form_tag 'users/signin', :method => "post" do %>
        <%=label_tag :username, nil %>
        <%=text_field_tag :password %>

        <%=label_tag :password, nil %>
        <%=password_field_tag :password %>

        <%=submit_tag "SIGN IN" %>
        <%end%>
      </div>
      
      Don't have an account? Sign up below!
      
      <div class="divider"></div>
      
    </div><!--/col-->
</div><!--/container-->

<div class="divider"></div>
  
<section class="bg-3">
  <div class="col-sm-6 col-sm-offset-3 text-center"><h1 style="padding:20px;background-color:rgba(5,5,5,.8)" class="howdoesit">Sign Up</h2>
    
      <%= form_tag '/users', :method => "post"  do%>
      <div class="signup">
        <%=label_tag :username, nil %>
        <%=text_field_tag :username%> <br>

        <%= label_tag :name, nil %>
        <%= text_field_tag :name, nil, class: "namefield" %> <br>

        <%= label_tag :email, nil %>
        <%= text_field_tag :email, nil, class: "emailfield" %> <br>

        <%= label_tag :password, nil %> 
        <%= password_field_tag :password,nil, class: "passfield" %> <br>
        <%= submit_tag "Create my account", class: "create" %>
      <%end%>
    </div>

  </div>
</section>
  


