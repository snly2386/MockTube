
<% if flash[:success] %>
  <div><%= flash[:success] %></div>
  <% end %>
<h1> <%=@video.title%></h1>

<iframe width="420" height="315" src="//www.youtube.com/embed/<%=@video.youtube_id%>" frameborder="0" allowfullscreen></iframe>



<% if flash[:success_comment] %>
  <div><%=flash[:success_comment]%>
    <% end %>
<%= form_tag("/users/#{params[:user_id]}/videos/#{@video.id}/comments", :method => "post", :remote => true) do %>
    <%=label_tag :comment, nil %>
    <%=text_area_tag :content, nil, class: "commentinput" %>
    <%=submit_tag "Comment"%>
<% end %>   

<div class="comments"> 
  <% @video.comments.each do |comment| %>
    <%= render 'comments/show', :c => comment %>
  <% end %>
</div>

   
