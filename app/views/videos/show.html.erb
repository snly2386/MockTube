
<% if flash[:success] %>
  <div><%= flash[:success] %></div>
  <% end %>
<h1> <%=@video.title%></h1>

<iframe width="420" height="315" src="//www.youtube.com/embed/<%=@video.youtube_id%>" frameborder="0" allowfullscreen></iframe>

<% if flash[:success_comment] %>
  <div><%=flash[:success_comment]%>
    <% end %>
<%= form_tag "/videos/#{@video.id}/comments", :method => "post" do %>
    <%=label_tag :comment, nil %>
    <%=text_area_tag :content %>
    <%=submit_tag "Comment"%>
    <% end %>


    <% @video.comments.each do |comment| %>
    <p> <%= comment.content %> </p>
    <% end %>
